            <button 
              onclick="cancelarCita('${c.documentId}')" 
              class="w-full mt-3 px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-sm font-medium rounded-lg transition-colors"
            >
              Cancelar
            </button>
          `
                : ""
          }
        </div>
      `;
          })
          .join("");
      }

