            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal Buscar Cliente -->
  <div x-data="clientSearch()" @open-search-client-modal.window="openSearch()">
    <div
      x-show="showSearch"
      x-cloak
      class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm"
      x-transition
    >
      <div
        class="bg-white rounded-xl shadow-2xl w-full max-w-lg overflow-hidden"
        @click.outside="closeSearch()"
      >
        <div class="p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Buscar Cliente</h3>

          <div class="flex gap-2 mb-4">
            <input
              type="text"
              x-model="searchTerm"
              @keyup.enter="search()"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
              placeholder="Nombre o correo..."
            />
            <button
              @click="search()"
              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50"
              :disabled="loading"
            >
              <span x-show="!loading">Buscar</span>
              <span x-show="loading">...</span>
            </button>
          </div>

          <!-- Resultados -->
          <div class="max-h-60 overflow-y-auto space-y-2">
            <template x-for="client in results" :key="client.id">
              <div
                class="p-3 border rounded-lg hover:bg-gray-50 cursor-pointer flex justify-between items-center"
                @click="selectClient(client)"
              >
                <div>
                  <p class="font-medium text-gray-900" x-text="client.nombre">
                  </p>
                  <p class="text-sm text-gray-500" x-text="client.correo"></p>
                </div>
                <span class="text-blue-600 text-sm">Seleccionar ‚Üí</span>
              </div>
            </template>
            <div
              x-show="results.length === 0 && searched"
              class="text-center text-gray-500 py-4"
            >
              No se encontraron clientes
            </div>
          </div>

          <div class="mt-4 flex justify-end">
            <button
              @click="closeSearch()"
              class="text-gray-500 hover:text-gray-700">Cancelar</button
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Agregar Mascota (Reutilizando estilos) -->
    <div
      x-show="showPetForm"
      x-cloak
      class="fixed inset-0 z-[60] flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm"
      x-transition
    >
      <div
        class="bg-white rounded-xl shadow-2xl w-full max-w-lg p-6"
        @click.outside="closePetForm()"
      >
        <h3 class="text-lg font-bold text-gray-900 mb-4">
          Agregar Mascota a <span
            x-text="selectedClient?.nombre"
            class="text-blue-600"></span>
        </h3>

        <form @submit.prevent="submitPet" class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Nombre</label
              >
              <input
                x-model="petForm.nombre"
                type="text"
                required
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Especie</label
              >
              <select
                x-model="petForm.especie"
                required
                class="w-full px-3 py-2 border rounded-lg"
              >
                <option value="Perro">Perro</option>
                <option value="Gato">Gato</option>
                <option value="Otro">Otro</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Raza</label
              >
              <input
                x-model="petForm.raza"
                type="text"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Sexo</label
              >
              <select
                x-model="petForm.sexo"
                required
                class="w-full px-3 py-2 border rounded-lg"
              >
                <option value="Macho">Macho</option>
                <option value="Hembra">Hembra</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Peso (kg)</label
              >
              <input
                x-model="petForm.peso"
                type="number"
                step="0.1"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Fecha Nac.</label
              >
              <input
                x-model="petForm.fecha_nacimiento"
                type="date"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
          </div>

          <div class="flex justify-end gap-3 mt-6">
            <button
              type="button"
              @click="closePetForm()"
              class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg"
              >Cancelar</button
            >
            <button
              type="submit"
              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
              :disabled="loading"
            >
              <span x-show="loading">Guardando...</span>
              <span x-show="!loading">Guardar Mascota</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</BaseDashboard>

<script>
  //@ts-nocheck
  import { loadSession, requireRole } from "../../lib/authHelpers.js";
  import { CitasAPI } from "../../lib/api/citas.js";
  import { NotificacionesAPI } from "../../lib/api/notificaciones.js";
  import { UsuariosAPI } from "../../lib/api/usuarios.js";
  import { PacientesAPI } from "../../lib/api/pacientes.js";

  // Expose APIs to window for AlpineJS
  window.UsuariosAPI = UsuariosAPI;
  window.PacientesAPI = PacientesAPI;
  window.loadSession = loadSession;

  let session, citasAPI, notificacionesAPI, usuariosAPI, pacientesAPI;
  let citasData = [];
  let notificacionesData = [];
  let filtroActual = "todas";

  document.addEventListener("DOMContentLoaded", async () => {
    try {
      session = loadSession();
      if (!session?.jwt) {
        window.location.href = "/login";
        return;
      }

      citasAPI = new CitasAPI(session.jwt);
      notificacionesAPI = new NotificacionesAPI(session.jwt);
      usuariosAPI = new UsuariosAPI(session.jwt);
      pacientesAPI = new PacientesAPI(session.jwt);

      await cargarDatos();
      setupEventos();

      // Recargar cada 10s para actualizaciones en tiempo real
      setInterval(async () => {
        console.log("üîÑ Actualizando datos autom√°ticamente...");
        await cargarDatos();
      }, 10000);

      // Escuchar cambios de visibilidad de la p√°gina
      document.addEventListener("visibilitychange", async () => {
        if (!document.hidden) {
          console.log("üëÅÔ∏è P√°gina visible - actualizando datos...");
          await cargarDatos();
        }
      });
    } catch (error) {
      console.error("Error inicializando dashboard:", error);
