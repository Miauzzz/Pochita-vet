            const searchQuery = encodeURIComponent(this.searchTerm.trim());
            const response = await fetch(
              `${window.STRAPI_URL}/api/usuarios?filters[$or][0][nombre][$containsi]=${searchQuery}&filters[$or][1][correo][$containsi]=${searchQuery}&filters[tipo_usuario][$eq]=cliente&populate=user`,
