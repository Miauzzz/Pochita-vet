          this.selectedClient = client;
          this.showSearch = false;
          this.showPetForm = true;
          this.resetPetForm();
        },

        closePetForm() {
          this.showPetForm = false;
          this.selectedClient = null;
        },

        resetPetForm() {
          this.petForm = {
            nombre: "",
            especie: "",
            raza: "",
            sexo: "",
            peso: "",
            fecha_nacimiento: "",
            color: "",
          };
        },

        async submitPet() {
          console.log("üêæ submitPet initiated");
          console.log("üë§ Selected Client:", this.selectedClient);

          if (!this.selectedClient) {
            console.error("‚ùå No client selected");
            return;
          }

          // Validar campos requeridos
          if (!this.petForm.nombre || !this.petForm.especie || !this.petForm.sexo) {
            alert("‚ùå Por favor complete los campos obligatorios: Nombre, Especie y Sexo");
            return;
          }

          this.loading = true;
          try {
            const session = window.loadSession();

            // Preparar datos de la mascota
            // Usamos clienteDocumentId para que el backend resuelva el propietario
            const datosMascota = {
              nombre: this.petForm.nombre,
              especie: this.petForm.especie,
              raza: this.petForm.raza || null,
              sexo: this.petForm.sexo,
              peso: this.petForm.peso ? parseFloat(this.petForm.peso) : null,
              fecha_nacimiento: this.petForm.fecha_nacimiento || null,
              color: this.petForm.color || null,
              // Enviar el documentId del cliente (Usuario collection)
              clienteDocumentId: this.selectedClient.documentId,
              // Tambi√©n enviar el correo como fallback
              clienteCorreo: this.selectedClient.correo,
            };

            console.log("üìù Datos mascota a crear:", datosMascota);

            const response = await fetch(`${window.STRAPI_URL}/api/pacientes`, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${session.jwt}`,
              },
              body: JSON.stringify({ data: datosMascota }),
            });

            const result = await response.json();

            if (!response.ok) {
              console.error("‚ùå Error response:", result);
              throw new Error(result.error?.message || "Error al crear mascota");
            }

            console.log("‚úÖ Mascota creada:", result);

            alert("‚úÖ Mascota agregada exitosamente");
            this.closePetForm();

            // Recargar datos
            if (typeof window.cargarDatos === 'function') {
              window.cargarDatos();
            }
          } catch (error) {
            console.error("Error adding pet:", error);
            alert("‚ùå Error al agregar mascota: " + error.message);
          } finally {
            this.loading = false;
          }
        },
      }));
    });
  </script>
