---
import DashboardLayout from '../../layouts/BaseDashboard.astro';
import CalendarioDisponibilidad from '../../components/dashboard/recepcionista/CalendarioDisponibilidad.astro';
---

<DashboardLayout>
  <div class="flex gap-6 flex-col lg:flex-row">
    <!-- Calendario (izquierda) -->
    <div class="lg:w-[65%]">
      <CalendarioDisponibilidad />
    </div>
    
    <!-- Notificaciones (derecha) -->
    <div class="lg:w-[35%]">
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 sticky top-4">
        <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
          </svg>
          Notificaciones
        </h3>
        <div class="space-y-3">
          <p class="text-gray-500 text-sm text-center py-8">No hay notificaciones nuevas</p>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script type="module">
  import { requireRole } from "/src/lib/authHelpers.js";
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', async () => {
      console.log("DOM listo, ejecutando requireRole para recepcionista");
      await requireRole(["recepcionista"]);
    });
  } else {
    console.log("DOM ya listo, ejecutando requireRole para recepcionista");
    await requireRole(["recepcionista"]);
  }
</script>
