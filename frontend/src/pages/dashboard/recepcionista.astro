                  <input
                    x-model="form.raza"
                    type="text"
                    class="w-full px-3 py-2 text-sm bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                    placeholder="Ej: Golden Retriever"
