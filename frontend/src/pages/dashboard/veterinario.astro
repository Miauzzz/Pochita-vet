---
import BaseDashboard from '../../layouts/BaseDashboard.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import Badge from '../../components/ui/Badge.astro';
import Loading from '../../components/ui/Loading.astro';
import Input from '../../components/ui/Input.astro';
import Modal from '../../components/ui/Modal.astro';
---

<!-- Script de verificaci√≥n ANTES de renderizar contenido -->
<script is:inline>
  // Verificar autenticaci√≥n inmediatamente antes de mostrar la p√°gina
  (function() {
    const jwt = localStorage.getItem('jwt') || sessionStorage.getItem('jwt');
    const appUserStr = localStorage.getItem('appUser') || sessionStorage.getItem('appUser');
    
    if (!jwt || !appUserStr) {
      window.location.replace('/login');
      return;
    }
    
    try {
      const appUser = JSON.parse(appUserStr);
      const userRole = appUser?.usuario?.tipo_usuario?.toLowerCase();
      
      // Verificar que sea veterinario
      if (userRole !== 'veterinario') {
        window.location.replace(`/dashboard/${userRole}`);
        return;
      }
    } catch (error) {
      console.error('Error verificando sesi√≥n:', error);
      localStorage.clear();
      sessionStorage.clear();
      window.location.replace('/login');
    }
  })();
</script>

<BaseDashboard>
  <div class="max-w-7xl mx-auto p-4 space-y-6 mt-5">
    
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-600" id="user-info">Cargando...</div>
      
      <!-- Notificaciones Dropdown -->
      <div class="relative" id="notificaciones-wrapper">
        <button id="btn-notificaciones" class="relative p-2 text-gray-600 hover:text-orange-600 transition-colors rounded-full hover:bg-orange-50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <span id="badge-notificaciones" class="absolute top-0 right-0 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white transform translate-x-1/4 -translate-y-1/4 bg-red-600 rounded-full hidden">0</span>
        </button>

        <!-- Dropdown Menu -->
        <div id="dropdown-notificaciones" class="absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-xl border border-gray-100 z-50 hidden transform origin-top-right transition-all duration-200 ease-out opacity-0 scale-95">
          <div class="p-3 border-b border-gray-100 flex justify-between items-center bg-gray-50 rounded-t-lg">
            <h3 class="font-semibold text-gray-700">Notificaciones</h3>
            <button onclick="marcarTodasLeidas()" class="text-xs text-orange-600 hover:text-orange-700 font-medium hover:underline">
              Marcar todas le√≠das
            </button>
          </div>
          <div id="lista-notificaciones" class="max-h-96 overflow-y-auto divide-y divide-gray-50">
            <div class="p-8 text-center text-gray-500">
              <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-orange-500 mx-auto mb-2"></div>
              <p class="text-sm">Cargando...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Secci√≥n: Mi Disponibilidad -->
    <section>
      <Card padding="md">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-900">Mi Disponibilidad</h2>
          <button onclick="window.open_disponibilidad()" class="px-3 py-1.5 text-sm bg-orange-500 hover:bg-orange-600 text-white rounded-lg font-medium transition-colors">
            + Nueva Disponibilidad
          </button>
        </div>
        
        <div id="disponibilidad-container">
          <Loading text="Cargando disponibilidades..." />
        </div>
      </Card>
    </section>

    <!-- Secci√≥n: Mi Agenda -->
    <section>
      <Card padding="md">
        <div class="mb-4">
          <div class="flex items-center justify-between mb-3">
            <h2 class="text-xl font-bold text-gray-900">Mi Agenda</h2>
            <div class="flex gap-2">
              <Button size="sm" variant="primary" data-filter-fecha="todas">Todas</Button>
              <Button size="sm" variant="ghost" data-filter-fecha="hoy">Hoy</Button>
              <Button size="sm" variant="ghost" data-filter-fecha="semana">Esta Semana</Button>
            </div>
          </div>
          <div class="flex gap-2">
            <button class="px-3 py-1 text-xs rounded-full bg-gray-200 text-gray-800" data-filter-estado="todas">Todas</button>
            <button class="px-3 py-1 text-xs rounded-full bg-transparent text-gray-600 border border-gray-300" data-filter-estado="pendiente">Pendientes</button>
            <button class="px-3 py-1 text-xs rounded-full bg-transparent text-gray-600 border border-gray-300" data-filter-estado="confirmada">Confirmadas</button>
            <button class="px-3 py-1 text-xs rounded-full bg-transparent text-gray-600 border border-gray-300" data-filter-estado="cancelada">Canceladas</button>
          </div>
        </div>
        
        <div id="agenda-container">
          <Loading text="Cargando agenda..." />
        </div>
      </Card>
    </section>

  </div>

  <!-- Modal: Nueva Disponibilidad -->
  <Modal id="disponibilidad" title="Nueva Disponibilidad">
    <form id="form-disponibilidad" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Fecha</label>
        <Input type="date" id="disp-fecha" required />
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Hora Inicio</label>
          <Input type="time" id="disp-hora-inicio" required />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Hora Fin</label>
          <Input type="time" id="disp-hora-fin" required />
        </div>
      </div>

      <div class="flex gap-2 pt-4 border-t">
        <Button type="submit" variant="success" full>Crear Disponibilidad</Button>
        <button type="button" onclick="window.close_disponibilidad()" class="px-4 py-2 text-sm bg-transparent hover:bg-gray-100 text-gray-700 rounded-lg font-medium transition-colors">
          Cancelar
        </button>
      </div>
    </form>
  </Modal>

</BaseDashboard>

<script>
  import { loadSession } from '../../lib/authHelpers.js';
  import { DisponibilidadesAPI } from '../../lib/api/disponibilidades.js';
  import { CitasAPI } from '../../lib/api/citas.js';
  import { NotificacionesAPI } from '../../lib/api/notificaciones.js';

  let session, disponibilidadesAPI, citasAPI, notificacionesAPI;
  let disponibilidades = [];
  let citas = [];
  let notificaciones = [];
  let filtroAgenda = 'todas';
  let filtroEstadoAgenda = 'todas';

  document.addEventListener('DOMContentLoaded', async () => {
    console.log('üöÄ Dashboard veterinario iniciando...');
    
    session = loadSession();
    if (!session?.jwt) {
      console.error('‚ùå No hay sesi√≥n, redirigiendo a login');
      window.location.href = '/login';
      return;
    }

    console.log('‚úÖ Sesi√≥n cargada:', session.appUser.profile.email);

    disponibilidadesAPI = new DisponibilidadesAPI(session.jwt);
    citasAPI = new CitasAPI(session.jwt);
    notificacionesAPI = new NotificacionesAPI(session.jwt);
    
    // El correo ya aparece en la navbar; no mostrarlo aqu√≠ para evitar duplicado
    document.getElementById('user-info').textContent = '';

    console.log('üì• Cargando datos iniciales...');
    await Promise.all([
      cargarDisponibilidades(),
      cargarAgenda(),
      cargarNotificaciones()
    ]);
    setupEventos();
    setupNotificacionesUI();
    
    // Configurar fecha m√≠nima para disponibilidad
    const hoy = new Date().toISOString().split('T')[0];
    document.getElementById('disp-fecha').setAttribute('min', hoy);
    
    // Recargar cada 10s para actualizaciones en tiempo real
    setInterval(async () => {
      console.log('üîÑ Actualizando datos autom√°ticamente...');
      await Promise.all([
        cargarDisponibilidades(),
        cargarAgenda(),
        cargarNotificaciones()
      ]);
    }, 10000);

    // Escuchar cambios de visibilidad de la p√°gina
    document.addEventListener('visibilitychange', async () => {
      if (!document.hidden) {
        console.log('üëÅÔ∏è P√°gina visible - actualizando datos...');
        await Promise.all([
          cargarDisponibilidades(),
          cargarAgenda(),
          cargarNotificaciones()
        ]);
      }
    });
    
    console.log('‚úÖ Dashboard veterinario listo');
  });

  async function cargarNotificaciones() {
    try {
      notificaciones = await notificacionesAPI.getMisNotificaciones();
      renderNotificaciones();
    } catch (error) {
      console.error('Error cargando notificaciones:', error);
    }
  }

  function renderNotificaciones() {
    const lista = document.getElementById('lista-notificaciones');
    const badge = document.getElementById('badge-notificaciones');
    const noLeidas = notificaciones.filter(n => !n.leida).length;

    // Actualizar badge
    if (noLeidas > 0) {
      badge.textContent = noLeidas.toString();
      badge.classList.remove('hidden');
    } else {
      badge.classList.add('hidden');
    }

    if (notificaciones.length === 0) {
      lista.innerHTML = `
        <div class="p-4 text-center text-gray-500 text-sm">
          No tienes notificaciones
        </div>
      `;
      return;
    }

    lista.innerHTML = notificaciones.map(n => `
      <div class="p-3 hover:bg-gray-50 transition-colors ${n.leida ? 'opacity-60' : 'bg-orange-50/30'}">
        <div class="flex justify-between items-start gap-2">
          <div class="flex-1">
            <p class="text-xs font-bold text-gray-500 uppercase mb-0.5">${n.tipo}</p>
            <h4 class="text-sm font-semibold text-gray-900">${n.titulo}</h4>
            <p class="text-sm text-gray-600 mt-0.5">${n.mensaje}</p>
            <span class="text-xs text-gray-400 mt-2 block">
              ${new Date(n.createdAt).toLocaleString('es-CL')}
            </span>
          </div>
          ${!n.leida ? `
            <button 
              onclick="marcarLeida('${n.documentId}')"
              class="text-orange-600 hover:text-orange-700 p-1 rounded-full hover:bg-orange-100"
              title="Marcar como le√≠da"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </button>
          ` : ''}
        </div>
      </div>
    `).join('');
  }

  function setupNotificacionesUI() {
    const btn = document.getElementById('btn-notificaciones');
    const dropdown = document.getElementById('dropdown-notificaciones');
    const wrapper = document.getElementById('notificaciones-wrapper');

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const isHidden = dropdown.classList.contains('hidden');
      
      if (isHidden) {
        dropdown.classList.remove('hidden');
        // Peque√±o delay para permitir la transici√≥n
        setTimeout(() => {
          dropdown.classList.remove('opacity-0', 'scale-95');
          dropdown.classList.add('opacity-100', 'scale-100');
        }, 10);
      } else {
        dropdown.classList.remove('opacity-100', 'scale-100');
        dropdown.classList.add('opacity-0', 'scale-95');
        setTimeout(() => {
          dropdown.classList.add('hidden');
        }, 200);
      }
    });

    // Cerrar al hacer click fuera
    document.addEventListener('click', (e) => {
      if (!wrapper.contains(e.target)) {
        dropdown.classList.remove('opacity-100', 'scale-100');
        dropdown.classList.add('opacity-0', 'scale-95');
        setTimeout(() => {
          dropdown.classList.add('hidden');
        }, 200);
      }
    });
  }

  window.marcarLeida = async (id) => {
    try {
      await notificacionesAPI.marcarComoLeida(id);
      await cargarNotificaciones();
    } catch (error) {
      console.error('Error marcando le√≠da:', error);
    }
  };

  window.marcarTodasLeidas = async () => {
    try {
      const noLeidas = notificaciones.filter(n => !n.leida);
      await Promise.all(noLeidas.map(n => notificacionesAPI.marcarComoLeida(n.documentId)));
      await cargarNotificaciones();
    } catch (error) {
      console.error('Error marcando todas:', error);
    }
  };

  async function cargarDisponibilidades() {
    try {
      const response = await disponibilidadesAPI.apiClient.get('/api/disponibilidads?populate=*&filters[veterinario][id][$eq]=' + session.appUser.profile.id);
      disponibilidades = response.data || [];
      renderDisponibilidades();
    } catch (error) {
      console.error('Error cargando disponibilidades:', error);
      document.getElementById('disponibilidad-container').innerHTML = `
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <p class="text-center text-red-600 text-sm font-medium">Error al cargar disponibilidades</p>
          <p class="text-center text-red-500 text-xs mt-1">${error.message}</p>
        </div>
      `;
    }
  }

  function renderDisponibilidades() {
    const container = document.getElementById('disponibilidad-container');
    
    if (disponibilidades.length === 0) {
      container.innerHTML = `
        <div class="text-center py-8 text-gray-500 text-sm">
          No tienes disponibilidades creadas. Crea una para comenzar.
        </div>
      `;
      return;
    }

    // Agrupar por fecha
    const porFecha = {};
    disponibilidades.forEach(d => {
      if (!porFecha[d.fecha]) porFecha[d.fecha] = [];
      porFecha[d.fecha].push(d);
    });

    container.innerHTML = Object.keys(porFecha).sort().map(fecha => {
      const bloques = porFecha[fecha].sort((a, b) => a.hora_inicio.localeCompare(b.hora_inicio));
      
      return `
        <div class="mb-4">
          <h3 class="text-sm font-semibold text-gray-900 mb-2">${formatearFecha(fecha)}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
            ${bloques.map(b => {
              const estadoClass = b.estado === 'disponible' ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200';
              const estadoText = b.estado === 'disponible' ? '‚úì Disponible' : '‚úó Ocupado';
              
              return `
                <div class="border ${estadoClass} rounded-lg p-3">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-semibold text-gray-900">
                      ${b.hora_inicio.substring(0, 5)} - ${b.hora_fin.substring(0, 5)}
                    </span>
                    <span class="text-xs text-gray-600">${estadoText}</span>
                  </div>
                  ${b.estado === 'disponible' ? `
                    <button 
                      onclick="eliminarDisponibilidad('${b.id}')"
                      class="w-full px-2 py-1 bg-red-500 hover:bg-red-600 text-white text-xs rounded transition-colors"
                    >
                      Eliminar
                    </button>
                  ` : `
                    <button 
                      onclick="restaurarDisponibilidad('${b.id}')"
                      class="w-full px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white text-xs rounded transition-colors"
                    >
                      Restaurar
                    </button>
                  `}
                </div>
              `;
            }).join('')}
          </div>
        </div>
      `;
    }).join('');
  }

  async function cargarAgenda() {
    try {
      citas = await citasAPI.getMisCitas();
      renderAgenda();
    } catch (error) {
      console.error('Error cargando agenda:', error);
      document.getElementById('agenda-container').innerHTML = `
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <p class="text-center text-red-600 text-sm font-medium">Error al cargar agenda</p>
          <p class="text-center text-red-500 text-xs mt-1">${error.message}</p>
        </div>
      `;
    }
  }

  function renderAgenda() {
    const container = document.getElementById('agenda-container');
    
    let citasFiltradas = citas;
    const hoy = new Date().toISOString().split('T')[0];
    
    // Filtro por fecha
    if (filtroAgenda === 'hoy') {
      citasFiltradas = citasFiltradas.filter(c => c.fecha === hoy);
    } else if (filtroAgenda === 'semana') {
      const inicioSemana = new Date();
      const finSemana = new Date();
      finSemana.setDate(finSemana.getDate() + 7);
      citasFiltradas = citasFiltradas.filter(c => {
        const fechaCita = new Date(c.fecha + 'T00:00:00');
        return fechaCita >= inicioSemana && fechaCita <= finSemana;
      });
    }
    
    // Filtro por estado
    if (filtroEstadoAgenda !== 'todas') {
      citasFiltradas = citasFiltradas.filter(c => c.estado === filtroEstadoAgenda);
    }

    if (citasFiltradas.length === 0) {
      container.innerHTML = `
        <div class="text-center py-8 text-gray-500 text-sm">
          No hay citas ${filtroAgenda === 'todas' ? '' : filtroAgenda === 'hoy' ? 'para hoy' : 'esta semana'}
        </div>
      `;
      return;
    }

    // Agrupar citas por fecha
    const citasPorFecha = {};
    citasFiltradas.forEach(c => {
      if (!citasPorFecha[c.fecha]) citasPorFecha[c.fecha] = [];
      citasPorFecha[c.fecha].push(c);
    });

    // Renderizar agrupado por fecha
    container.innerHTML = Object.keys(citasPorFecha).sort().map(fecha => {
      const citasDelDia = citasPorFecha[fecha].sort((a, b) => a.hora.localeCompare(b.hora));
      
      return `
        <div class="mb-6">
          <h3 class="text-base font-bold text-gray-900 mb-3 flex items-center gap-2">
            üìÖ ${formatearFecha(fecha)}
            <span class="text-xs font-normal text-gray-500">(${citasDelDia.length} cita${citasDelDia.length !== 1 ? 's' : ''})</span>
          </h3>
          <div class="space-y-3">
            ${citasDelDia.map(c => `
              <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-sm transition-shadow">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <p class="font-semibold text-gray-900">üïê ${c.hora?.substring(0, 5)}</p>
                      ${c.estado === 'pendiente' ? '<span class="px-2 py-0.5 text-xs bg-yellow-100 text-yellow-800 rounded-full font-medium">Pendiente</span>' : 
                        c.estado === 'confirmada' ? '<span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded-full font-medium">Confirmada</span>' : 
                        '<span class="px-2 py-0.5 text-xs bg-red-100 text-red-800 rounded-full font-medium">Cancelada</span>'}
                    </div>
                    
                    <div class="text-sm text-gray-600 space-y-1">
                      <p>üêæ ${c.paciente?.nombre || '(Sin mascota)'}</p>
                      <p>üë§ ${c.paciente?.propietario?.nombreCompleto || c.paciente?.propietario?.username || 'N/A'}</p>
                      ${c.motivo ? `<p class="text-xs text-gray-500 italic mt-2">üìù ${c.motivo}</p>` : ''}
                    </div>
                  </div>
                  
                  ${c.estado !== 'cancelada' ? `
                    <button 
                      onclick="cancelarCita('${c.documentId}')"
                      class="px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white text-xs font-medium rounded transition-colors"
                    >
                      Cancelar
                    </button>
                  ` : ''}
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;
    }).join('');
  }

  function setupEventos() {
    // Filtros de fecha
    document.querySelectorAll('[data-filter-fecha]').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('[data-filter-fecha]').forEach(b => {
          b.className = b.className.replace('bg-orange-500 text-white hover:bg-orange-600', 'bg-transparent text-gray-700 hover:bg-gray-100');
        });
        btn.className = btn.className.replace('bg-transparent text-gray-700 hover:bg-gray-100', 'bg-orange-500 text-white hover:bg-orange-600');
        filtroAgenda = btn.dataset.filterFecha;
        renderAgenda();
      });
    });
    
    // Filtros de estado
    document.querySelectorAll('[data-filter-estado]').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('[data-filter-estado]').forEach(b => {
          b.className = 'px-3 py-1 text-xs rounded-full bg-transparent text-gray-600 border border-gray-300';
        });
        btn.className = 'px-3 py-1 text-xs rounded-full bg-gray-200 text-gray-800';
        filtroEstadoAgenda = btn.dataset.filterEstado;
        renderAgenda();
      });
    });

    // Form crear disponibilidad
    document.getElementById('form-disponibilidad').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      console.log('üìù Form disponibilidad submit...');
      
      const fechaInput = document.getElementById('disp-fecha').value;
      const horaInicioInput = document.getElementById('disp-hora-inicio').value;
      const horaFinInput = document.getElementById('disp-hora-fin').value;
      
      // Validar que hora fin sea mayor que hora inicio
      if (horaFinInput <= horaInicioInput) {
        alert('‚ùå La hora de fin debe ser posterior a la hora de inicio');
        return;
      }
      
      // Validar que si es hoy, la hora sea futura
      const hoy = new Date().toISOString().split('T')[0];
      if (fechaInput === hoy) {
        const ahora = new Date();
        const horaActual = ahora.getHours() * 60 + ahora.getMinutes();
        const [h, m] = horaInicioInput.split(':').map(Number);
        const horaIngresada = h * 60 + m;
        
        if (horaIngresada <= horaActual) {
          alert('‚ùå No puedes crear disponibilidad en horas pasadas');
          return;
        }
      }
      
      const datos = {
        fecha: fechaInput,
        hora_inicio: horaInicioInput + ':00.000',
        hora_fin: horaFinInput + ':00.000'
      };
      
      console.log('Datos disponibilidad:', datos);

      try {
        await disponibilidadesAPI.crearDisponibilidad(datos);
        alert('‚úÖ Disponibilidad creada');
        window.close_disponibilidad();
        await cargarDisponibilidades();
        e.target.reset();
      } catch (error) {
        console.error('Error creando disponibilidad:', error);
        alert('‚ùå Error: ' + error.message);
      }
    });
  }

  window.eliminarDisponibilidad = async (documentId) => {
    if (!confirm('¬øEliminar esta disponibilidad?')) return;
    
    try {
      await disponibilidadesAPI.eliminarDisponibilidad(documentId);
      await cargarDisponibilidades();
