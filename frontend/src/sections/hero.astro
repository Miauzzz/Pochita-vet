    <div class="flex flex-col lg:flex-row items-center justify-between gap-12 lg:gap-16">
      
      <!-- Content Section -->
      <div class="flex-1 space-y-8 text-center lg:text-left">
        <h1 class="manrope font-black text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-black tracking-tight leading-tight">
          El cuidado experto que tu mejor amigo merece
        </h1>
        
