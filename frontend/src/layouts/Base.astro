---
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ?? 'Veterinaria Pochita S.A'}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="bg-(--light-bgcolor) flex flex-col min-h-screen ">
    <header class="sticky top-0 z-50">
        <nav x-data="{ open: false }" class="bg-orange-400 border-black border-b-2 border-r text-white h-[60px] w-full p-5 
                    flex items-center justify-end relative rounded-none mx-auto 
                    lg:w-[70%] lg:rounded-lg lg:mt-4">
            <img src="/logo.webp" alt="Logo" class="absolute
                h-20 top-1 left-2
                md:h-25 md:top-0 md:left-4
                lg:h-34 lg:-top-3 lg:left-2 z-99
            "/>

            <!-- Menú Hamburguesa (visible en el celu) -->
            <div class="lg:hidden">
                <button class="p-2 focus:outline-none relative z-50" type="button"  
                    @click="open = !open" 
                    aria-label="Abrir menú"
                    aria-controls="mobile-menu">

                    <!-- Icono hamburguesa -->
                    <svg x-show="!open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>

                    <!-- Icono X (cerrar) -->
                    <svg x-show="open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                </button>
            </div>

            <!-- Dropdown menu (Para la versión del celu) -->
            <div id="mobile-menu" x-show="open" x-cloak
                @click.outside="open = false"
                @keydown.escape.window="open = false"
                x-transition
                class="text-center lg:hidden absolute left-0 top-full w-full bg-white text-black rounded-b-md shadow-lg z-50 origin-top">
                <ul class="py-2">
                    <li><a class="block px-4 py-2 hover:bg-gray-100 w-full" href="#">Inicio</a></li>
                    <li><a class="block px-4 py-2 hover:bg-gray-100 w-full" href="#servicios">Servicios</a></li>
                    <li><a class="block px-4 py-2 hover:bg-gray-100 w-full" href="#about">Nosotros</a></li>
                    <li><a class="block px-4 py-2 hover:bg-gray-100 w-full" href="#contact">Contacto</a></li>
                    <li><a class="block px-4 py-2 bg-amber-500 text-white hover:bg-amber-600" href="/login">Acceder</a></li>
                </ul>
            </div>

            <!-- Menu desktop -->
            <ul class="hidden lg:flex space-x-4 items-center">
                <li><a href="#">Inicio</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#about">Nosotros</a></li>
                <li><a href="#contact">Contacto</a></li>
                <li><a href="/login" class="bg-stone-900 px-3 py-2 rounded-lg">Acceder</a></li>
            </ul>
        </nav>
    </header>

    <slot /> <!-- Aqui se renderiza el contenido principal  -->

    <footer class="bg-neutral-900 text-white text-center p-4 bottom-0 left-0 w-full">
        <p>&copy; {new Date().getFullYear()} Veterinaria Pochita S.A. Todos los derechos reservados.</p>
    </footer>

    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </body>
</html>