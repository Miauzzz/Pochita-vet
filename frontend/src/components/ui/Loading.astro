---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  text?: string;
}

const { size = 'md', text } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex flex-col items-center justify-center gap-3">
  <div class={`${sizeClasses[size]} border-3 border-orange-200 border-t-orange-500 rounded-full animate-spin`}></div>
  {text && <p class="text-sm text-gray-600">{text}</p>}
</div>
